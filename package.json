{
	"name": "quicklib",
	"displayName": "Quick Library",
	"publisher": "Edfood",
	"description": "",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.45.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:quicklib.paste"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
      "title": "Quick Library",
      "properties": {
        "quicklib.libraryFolder": {
          "type": "string",
          "default": "$HOME/.vscode/extensions/QuickLibrary/LibraryFiles",
          "description": "Set the path to a Library folder to managing the library."
				},
				"quicklib.showHiddenFiles": {
          "type": "boolean",
          "default": false,
          "description": "Whether to include hidden files in the list of library files displayed."
        }
			}
    },
		"commands": [
			{
				"command": "quicklib.paste",
				"title": "paste library"
			}
		],
		"keybindings": [
			{
				"command": "quicklib.paste",
				"key": "ctrl+i",
				"mac": "cmd+i",
				"when": "editorTextFocus"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.45.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
